{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@render/*": ["./src/renderer/*"],
      "@main/*": ["./src/electron/*"]
    },
    "typeRoots": ["./src/renderer/@types"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
